---
import CardProject from '../../components/CardProject.astro';
import Layout from '../../layouts/Layout.astro';


import { getProjects } from '../../data/projects-info';
import { getI18N } from "../../i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
const { UProjects, ProProjects } = getProjects(currentLocale ?? "");

---

<Layout title={i18n.SEO.PROYECTOS_TITLE} description={i18n.SEO.PROYECTOS_TITLE}>
    <main class="px-6 lg:px-0 mx-auto max-w-3xl">
        <h1 class="font-bold text-3xl sm:text-4xl tracking-tight text-textPrimary dark:text-darKText">{i18n.PROYECTOS}</h1>
        <p class="dark:text-darkTextSecondary text-gray-700 mt-6 max-w-prose leading-relaxed">
            {i18n.PROYECTOS_DESC}
        </p>
        <h2 class="text-textPrimary dark:text-darKText mt-12 text-xl font-semibold">{i18n.PROYECTOS_PERSONALES}</h2>
        <ul class="mt-6 grid grid-cols-1 gap-6">
            {UProjects.map((project) => (
                <CardProject {...project}/>
            ))}
        </ul>
        <h2 class="text-textPrimary dark:text-darKText mt-12 text-xl font-semibold">{i18n.PROYECTOS_PROFESIONALES}</h2>
        <ul class="mt-6 grid grid-cols-1 gap-6">
            {ProProjects.map((project) => (
                <CardProject {...project}/>
            ))}
        </ul>
    </main>
</Layout>
