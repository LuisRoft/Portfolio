---
import { getI18N } from "../i18n"
interface Props {
  title: string;
  company: string;
  date: string;
  description: string;
  recent?: boolean;
}

const { title, company, date, description, recent = false } = Astro.props;

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

// Dividir la descripción por el separador "|"
const parts = description.split('|');
const summary = parts[0]?.trim() || '';
const achievements = parts.slice(1, -1).map(item => item.trim()).filter(item => item.length > 0);
const techStack = parts[parts.length - 1]?.trim() || '';

// Extraer tecnologías del Tech Stack
const technologies = techStack.replace('Tech Stack:', '').trim().split(',').map(tech => tech.trim());
---


<span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-darkBg">
  <svg class="w-2.5 h-2.5 text-blue-800 dark:text-darKText" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
  </svg>
</span>
<h3 class="flex items-center justify-between mb-1 text-md sm:text-lg font-semibold text-textPrimary dark:text-darKText">
  {title} - {company}
  {recent && (
    <span class="text-center bg-blue-100 text-blue-800 text-xs sm:text-sm font-medium px-1 md:px-2.5 py-0.5 rounded dark:bg-darKText dark:text-textPrimary">{i18n.MAS_RECIENTE}</span>
  )}
</h3>
<time class="block mb-2 text-sm font-normal leading-none text-gray-700 dark:text-darkTextSecondary">{date}</time>

<!-- Resumen/Overview -->
<p class="mb-3 sm:text-base text-sm font-normal text-gray-700 dark:text-gray-300 leading-relaxed">
  {summary}
</p>

<!-- Logros y Responsabilidades -->
{achievements.length > 0 && (
  <ul class="mb-3 sm:text-sm text-xs text-gray-600 dark:text-darkTextSecondary space-y-1.5">
    {achievements.map(achievement => (
      <li class="flex items-start gap-2 leading-relaxed">
        <span class="text-blue-600 dark:text-blue-400 mt-0.5 flex-shrink-0">▸</span>
        <span>{achievement.replace(/^•\s*/, '')}</span>
      </li>
    ))}
  </ul>
)}

<!-- Tech Stack -->
{technologies.length > 0 && technologies[0] !== '' && (
  <div class="flex flex-wrap gap-1.5 mt-3">
    {technologies.map(tech => (
      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300 border border-blue-200 dark:border-blue-800">
        {tech}
      </span>
    ))}
  </div>
)}
