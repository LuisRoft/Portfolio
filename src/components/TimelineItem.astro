---
import { getI18N } from "../i18n"
interface Props {
  title: string;
  company: string;
  date: string;
  description: string;
  recent?: boolean;
}

const { title, company, date, description, recent = false } = Astro.props;


const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<li class="mb-10 ms-6">
  <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-darkBg">
    <svg class="w-2.5 h-2.5 text-blue-800 dark:text-darKText" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
      <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
    </svg>
  </span>
  <h3 class="flex items-center justify-between mb-1 text-md sm:text-lg font-semibold text-textPrimary dark:text-darKText">
    {title} - {company}
    {recent && (
      <span class="text-center bg-blue-100 text-blue-800 text-xs sm:text-sm font-medium px-1 md:px-2.5 py-0.5 rounded dark:bg-darKText dark:text-textPrimary">{i18n.MAS_RECIENTE}</span>
    )}
  </h3>
  <time class="block mb-2 text-sm font-normal leading-none text-gray-700 dark:text-darkTextSecondary">{date}</time>
  <p class="mb-4 sm:text-base text-sm font-normal text-gray-600 dark:text-darkTextSecondary">{description}</p>
</li>
